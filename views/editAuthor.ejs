<%- include("partials/header.ejs") %>
<%- include("partials/nav.ejs") %>
<body>
<div class="container">
    <h1 class="display-1"> Updating Author Data </h1>
    <form method="POST" action="/author/edit">
        <input type="hidden" name="authorId" value="<%=authorInfo[0].authorId%>">

        <label for="editfName" class="form-label">First Name: </label>
        <input id="editfName" type="text" name="fName" value="<%=authorInfo[0].firstName%>">
        <br>

        <label for="editlName" class="form-label">Last Name: </label>
        <input id="editlName" type="text" name="lName" value="<%=authorInfo[0].lastName%>">
        <br>

        <label for="editdob" class="form-label">Date of Birth: </label>
        <input id="editdob" type="date" name="dob"  value="<%=authorInfo[0].dobISO%>">
        <br>

        <label for="editdod" class="form-label">Date of Death: </label>
        <input id="editdod" type="date" name="dod" value="<%=authorInfo[0].dodISO%>"><br>

        <label for="editCountry" class="form-label">Birth Place: </label>
        <input id="editCountry" type="text" name="country" value="<%=authorInfo[0].country%>"><br>

        <label for="editSex" class="form-label">Sex: </label>
        <input id="editSex" type="radio" name="sex" value="M"
        <% if (authorInfo[0].sex == "M") { %>
           checked
            <% } %>
        > Male

        <input type="radio" name="sex" value="F"
        <% if (authorInfo[0].sex == "F") { %>
           checked
            <% } %>
        > Female
        <br>

        <label for="editProfession" class="form-label">Profession: </label>
        <input id="editProfession" type="text" name="profession" value="<%=authorInfo[0].profession%>"><br>

        <label for="editPortrait" class="form-label">Portrait URL: </label>
        <input id="editPortrait" type="text" name="portrait" value="<%=authorInfo[0].portrait%>"><br>

        <label for="editBio" class="form-label">Biography: </label>
        <textarea id="editBio" class="form-control" name="bio"><%=authorInfo[0].biography%>
        </textarea><br>
        <button class="btn btn-info">Update Author</button>
</form>
</div>
</body>
</html>
